<mah:MetroWindow x:Class="Signet.View.UserManage_Window"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Signet.View"
      xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
      mc:Ignorable="d" 
      xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:ui ="clr-namespace:Signet.UI"
      xmlns:mvvm="http://www.galasoft.ch/mvvmlight"
      xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
      Dialog:DialogParticipation.Register="{Binding}"
      Height="450" Width="800"
      xmlns:c="clr-namespace:Signet.Common"
      Title="{Binding mUserManage_Model.Header, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">

    <i:Interaction.Behaviors>
        <c:WindowBehavior Close="{Binding ToClose}"/>
    </i:Interaction.Behaviors>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"></RowDefinition>
            
            <RowDefinition Height="100*"></RowDefinition>
            <RowDefinition Height="100*"></RowDefinition>
            <RowDefinition Height="100*"></RowDefinition>
            
            <RowDefinition Height="100*"></RowDefinition>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="50*"></ColumnDefinition>
            
            <ColumnDefinition Width="60*"></ColumnDefinition>
            <ColumnDefinition Width="100*"></ColumnDefinition>
            
            <ColumnDefinition Width="30*"></ColumnDefinition>
            
            <ColumnDefinition Width="60*"></ColumnDefinition>
            <ColumnDefinition Width="100*"></ColumnDefinition>
            
            <ColumnDefinition Width="50*"></ColumnDefinition>
            
        </Grid.ColumnDefinitions>

        <Label Grid.Column="5" Grid.Row="0" Grid.ColumnSpan="2"
               VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="Red">新用户默认密码“123456”</Label>


        <Label Grid.Column="1" Grid.Row="1"
               VerticalAlignment="Center" HorizontalAlignment="Right">用户名:</Label>
        <TextBox Grid.Column="2" Grid.Row="1" 
                 Width="150" Height="30"
                 VerticalAlignment="Center" HorizontalAlignment="Center"
                 Text="{Binding mUserManage_Model.UserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>

        <Label Grid.Column="4" Grid.Row="1"
               VerticalAlignment="Center" HorizontalAlignment="Right">部门:</Label>
        <ComboBox Grid.Column="5" Grid.Row="1" 
                 Width="150" Height="30"
                 VerticalAlignment="Center" HorizontalAlignment="Center"
                 ItemsSource="{Binding mUserManage_Model.Departs,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                 SelectedItem="{Binding mUserManage_Model.Selected_Depar,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                 DisplayMemberPath="Depart_Name" SelectedValuePath="DepartID"></ComboBox>

        <Label Grid.Column="4" Grid.Row="2"
               VerticalAlignment="Center" HorizontalAlignment="Right">角色:</Label>
        <ComboBox Grid.Column="5" Grid.Row="2" 
                 Width="150" Height="30"
                 VerticalAlignment="Center" HorizontalAlignment="Center"
                 ItemsSource="{Binding mUserManage_Model.Roles,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                 SelectedItem="{Binding mUserManage_Model.Selected_Role,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                 DisplayMemberPath="Role_Name" SelectedValuePath="Role_ID"></ComboBox>

        <Label Grid.Column="1" Grid.Row="2"
               VerticalAlignment="Center" HorizontalAlignment="Right">出生日期:</Label>
        <mah:DateTimePicker Grid.Column="2" Grid.Row="2" 
                    Width="150" Height="30" VerticalContentAlignment="Center"
                    Culture="zh-CN" mah:TextBoxHelper.Watermark="出生日期"
                    SelectedDateTime="{Binding mUserManage_Model.Birthday, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></mah:DateTimePicker>

        <Label Grid.Column="1" Grid.Row="3"
               VerticalAlignment="Center" HorizontalAlignment="Right">电话号码:</Label>
        <TextBox Grid.Column="2" Grid.Row="3" 
                 Width="150" Height="30"
                 VerticalAlignment="Center" HorizontalAlignment="Center"
                 Text="{Binding mUserManage_Model.PhoneNum, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>

        <Label Grid.Column="4" Grid.Row="3"
               VerticalAlignment="Center" HorizontalAlignment="Right">电子邮箱:</Label>
        <TextBox Grid.Column="5" Grid.Row="3" 
                 Width="150" Height="30"
                 VerticalAlignment="Center" HorizontalAlignment="Center"
                 Text="{Binding mUserManage_Model.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>

        <Button Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="2"
                Width="100" Height="30"
            Style="{StaticResource HeadButtonStyle}" Content="确认" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Click">
                    <i:InvokeCommandAction Command="{Binding Confirm_Command}">
                    </i:InvokeCommandAction>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Button>

        <Button Grid.Column="4" Grid.Row="4" Grid.ColumnSpan="2"
                Width="100" Height="30"
            Style="{StaticResource HeadButtonStyle}" Background="Gray"  Content="取消" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Click">
                    <i:InvokeCommandAction Command="{Binding Cancel_Command}">
                    </i:InvokeCommandAction>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Button>
    </Grid>
</mah:MetroWindow>
