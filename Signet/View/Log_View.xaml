<Page x:Class="Signet.View.Log_View"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Signet.View"
      mc:Ignorable="d" 
      xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
      xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
      xmlns:mvvm="http://www.galasoft.ch/mvvmlight"
      xmlns:c="clr-namespace:Signet.Common"
      xmlns:ui ="clr-namespace:Signet.UI"
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:wd="https://github.com/WPFDevelopersOrg/WPFDevelopers"
      Title="Log_View">
    
    <Page.DataContext>
        <Binding Path="Log" Source="{StaticResource Locator}"></Binding>
    </Page.DataContext>

    <Page.Resources>
        <c:AuthConverter x:Key="auCOnverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="100*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Label VerticalAlignment="Center">操作时间</Label>
            <mah:DateTimePicker Name="StartTime_Dtpk" Height="35" VerticalContentAlignment="Center"
                    Culture="zh-cn" mah:TextBoxHelper.Watermark="开始时间"
                    SelectedDateTime="{Binding mLog_Model.LogStartTime, Mode=TwoWay, UpdateSourceTrigger=Explicit}"></mah:DateTimePicker>
            <Label VerticalAlignment="Center">-</Label>
            <mah:DateTimePicker Name="EndTime_Dtpk" Height="35" VerticalContentAlignment="Center"
                    Culture="zh-cn" mah:TextBoxHelper.Watermark="结束时间"
                    SelectedDateTime="{Binding mLog_Model.LogEndTime, Mode=TwoWay, UpdateSourceTrigger=Explicit}"></mah:DateTimePicker>
            <Button Name="Search_Btn" Style="{StaticResource HeadButtonStyle}" Content="搜索"
                    IsEnabled="{Binding LogQuery ,Source={x:Static c:AuthorizationItemDefine.Default},Converter={StaticResource auCOnverter}}"
                    Click="Search_Btn_Click">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <mvvm:EventToCommand Command="{Binding Search_Command}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
        </StackPanel>

        <DataGrid Grid.Row="1"     
                  ItemsSource="{Binding mLog_Model.LogList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                  AutoGenerateColumns="False" CanUserAddRows="False" 
                  VerticalScrollBarVisibility="Auto"                                                         
                  CanUserSortColumns="False" IsReadOnly ="True"                    
                  ScrollViewer.VerticalScrollBarVisibility="Visible"                    
                  ScrollViewer.HorizontalScrollBarVisibility="Visible">
            <DataGrid.Columns>
                <DataGridTextColumn Header="时间" Binding="{Binding Time,ConverterCulture=zh-cn}" Width="*" />
                <DataGridTextColumn Header="等级" Binding="{Binding Level}" Width="*" />
                <DataGridTextColumn Header="日志内容" Binding="{Binding Message}" Width="*" />
                <DataGridTextColumn Header="用户" Binding="{Binding UserID}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- 分页控件 -->
        <ui:PagerControl Grid.Row="2"
            TotalItems="{Binding TotalItems}"
            CurrentPage="{Binding CurrentPage, Mode=TwoWay}"
            PageSize ="{Binding PageSize, Mode=TwoWay}"/>
    </Grid>
</Page>
